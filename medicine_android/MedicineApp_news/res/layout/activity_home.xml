<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#EDF0F5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:background="@drawable/home_tab_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView 
            android:id="@+id/left_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:src="@drawable/home_tab_user" />

        <RadioGroup
            android:id="@+id/tabs_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
             android:layout_margin="10dp"
            >

            <RadioButton
                android:id="@+id/tab_rb_a"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/tabs_1"
                android:background="@drawable/tabradiorroup_selector"
                android:singleLine="true"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/tab_rb_b"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:button="@null"
                android:background="@drawable/tabradiorroup_selector"
                android:drawableTop="@drawable/tabs_2"
                android:singleLine="true"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/tab_rb_c"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:button="@null"
                android:background="@drawable/tabradiorroup_selector"
                android:drawableTop="@drawable/tabs_3"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/tab_rb_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:button="@null"
                android:background="@drawable/tabradiorroup_selector"
                android:drawableTop="@drawable/tabs_4"
                android:gravity="left"
                android:singleLine="true" />
        </RadioGroup>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/tab_content"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="11.08" />

</LinearLayout>